.row
  .col-md-3
  .col-md-6
    %h1 Routes

.row
  .col-md-3
  .col-md-6
    .table-responsive
      %table.table
        %thead
          %tr
            %th
              %i.fa-solid.fa-map
            %th
            %th.text-center
              %i.fa-solid.fa-list-ul
            %th.text-center
              %i.fa-solid.fa-list-check
            %th
              %i.fa-solid.fa-truck
        - @routes.each do |route|
          %tr
            %td= link_to route.name, [:driver, route]
            %td
              = link_to driver_reservations_map_path(route_id: route.id) do
                %i.fa-solid.fa-map
            %td.text-center= route.reservations.count
            %td.text-center= route.reservations.pending_pickup.count
            %td John, Mary, Lisa
