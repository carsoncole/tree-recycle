.row
  .col-md-3
  .col-md-6
    %h1= @driver.name

.row.mb-4
  .col-md-3
  .col-md-6
    %h3= link_to @driver.zone.name, driver_zone_path(@driver.zone) if @driver.zone

.row
  .col-md-3
  .col-md-6.text-middle
    - if @driver.phone.present?
      = link_to "tel:#{@driver.phone}" do
        = @driver.phone
        %i.fa-solid.fa-phone
    %br
    = mail_to @driver.email
