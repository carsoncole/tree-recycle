.container
  #contacts
    .row
      .col-lg-3
      .col-lg-6
        %h1
          %i.fa-solid.fa-phone
          Contacts


    .row.section
      .col-lg-3
      .col-lg-6
        .table-responsive
          %table.table.contacts
            %tr
              %th(colspan='4')
                General
            %tr
              %td.name= setting.contact_name
              %td.zone
              %td.phone= link_to setting.contact_phone, "tel:#{setting.contact_phone}" if setting.contact_phone
              %td.email= mail_to(setting.contact_email) if setting.contact_email


            %tr
              %th(colspan='4')
                Zone leaders
            - @zone_leaders.each do |driver|
              %tr
                %td.name= driver.name
                %td.zone= driver.zone.name
                %td.phone= link_to driver&.phone, "tel:#{driver&.phone}" if driver&.phone
                %td.email= mail_to driver&.email if driver&.email



