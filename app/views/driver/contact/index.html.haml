#contacts.container
  .row
    .col-lg-12
      %h1
        %i.bi.bi-telephone-fill
        Contacts

  .row.section
    .col-lg-3
    .col-lg-6
      .table-responsive
        %table.table#contacts-table
          %tr
            %th(colspan='4')
              General
          %tr.contact
            %td.name= setting.contact_name
            %td.phone
              - if setting.contact_phone
                = link_to "tel:#{setting.contact_phone}" do
                  = setting.contact_phone

            %td.email= mail_to(setting.contact_email) if setting.contact_email
          - if setting.donation_notification_sms_number.present?
            %tr
              %td.name SMS only
              %td.phone= setting.donation_notification_sms_number
              %td.email

          %tr
            %th(colspan='4')
              Zone leaders
          - @zone_leaders.each do |driver|
            %tr.contact
              %td.name
                = driver.name
                - if driver.zone
                  = surround("(", ")") do
                    = driver&.zone&.name
              %td.phone
                - if driver&.phone
                  = link_to "tel:#{driver&.phone}" do
                    =driver&.phone

              %td.email= mail_to driver&.email if driver&.email

  .row
    .col-lg-12
      %h1
        %i.bi.bi-truck-front-fill
        Drivers

  .row
    .col-lg-6.offset-lg-3
      .table-responsive
        %table.table#drivers-table
          %tbody
            - @zones.each do |zone|
              - next unless zone.drivers.any?
              %tr
                %td.route-zone.zone
                  = zone.name
                %td
                %td
              - zone.drivers.each do |driver|
                %tr
                  %th.name= link_to driver.name, driver_driver_path(driver)
                  %td.phone
                    - if driver.phone.present?
                      = link_to "tel:#{driver.phone}" do
                        = driver.phone
                  %td.email= mail_to driver.email

            - if Driver.unzoned.any?
              %tr
                %td.zone No Zone
                %td.data
                %td.data

              - Driver.unzoned.each do |driver|
                %tr
                  %th.name= link_to driver.name, driver_driver_path(driver)
                  %td.phone
                    - if driver.phone.present?
                      = link_to "tel:#{driver.phone}" do
                        = driver.phone
                  %td.email= mail_to driver.email
