%header.mb-lg-5
  %nav.navbar.navbar-expand-lg.navbar-dark.bg-primary#driver-navbar.pt-lg-4.pb-lg-4
    .container
      = link_to driver_home_path, class: 'navbar-brand' do
        %i.fa-solid.fa-tree.fa-lg
        Driver
      %button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportedContent
        %ul.navbar-nav.me-auto.mb-2.mb-lg-0


          %li.nav-item
            = link_to "Home", driver_home_path, class: 'nav-link'
          %li.nav-item
            = link_to driver_routing_path, class: 'nav-link' do
              %i.fa-solid.fa-road
              Routes
          %li.nav-item
            = link_to driver_drivers_path, class: 'nav-link' do
              %i.fa-solid.fa-car
              Drivers

        %ul.navbar-nav.my-2.my-lg-0
          %li.nav-item
            = link_to "Main", root_path, class: 'btn btn-outline-light btn-site'
          - if signed_in?
            %li.nav-item
              = link_to "Admin", admin_root_path, class: "btn btn-outline-light btn-site"
          %li.nav-item
            - if signed_in?
              %li.nav-item= button_to 'Sign out', sign_out_path, method: :delete, class: 'btn btn-primary'
            - else
              %li.nav-item= link_to 'Sign in', sign_in_path, class: 'nav-link'
