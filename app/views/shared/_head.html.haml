%head
  %title
    - if @site_title
      = @site_title
      \-
    - if driver_view?
      = DRIVER_SITE_TITLE
      \-
    - elsif admin_view?
      = ADMIN_SITE_TITLE
      \-
    = setting.site_title
  %meta(name="viewport" content="width=device-width,initial-scale=1")
  - if setting.meta_description
    %meta{ name: "description", content: setting.meta_description }
  = csrf_meta_tags
  = csp_meta_tag

  - if driver_view? || admin_view?
    %meta(name="robots" content="noindex")

  %link{ rel:"canonical", href: "https://www.treerecycle.net" + request.path }

  <!-- Facebook meta -->
  - if setting.facebook_page_id.present?
    %meta{ property: 'fb:admins', content: setting.facebook_page_id } 
  - if setting.meta_site_name.present?
    %meta{ property: 'og:site_name', content: setting.meta_site_name }
  - if setting.meta_description.present?
    %meta{ property: 'og:description', content: setting.meta_description }
  - if setting.meta_image_filename.present?
    %meta{ property: 'og:image', content: "#{ image_url(setting.meta_image_filename) }" }


  <!-- CSS only -->
  - if driver_view?
    = favicon_link_tag 'driver/apple-touch-icon-57x57.png', rel: 'apple-touch-icon', sizes: '57x57', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon-76x76.png', rel: 'apple-touch-icon', sizes: '76x76', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon-72x72.png', rel: 'apple-touch-icon', sizes: '72x72', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon-114x114.png', rel: 'apple-touch-icon', sizes: '114x114', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon-120x120.png', rel: 'apple-touch-icon', sizes: '120x120', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon-144x144.png', rel: 'apple-touch-icon', sizes: '144x144', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon-152x152.png', rel: 'apple-touch-icon', sizes: '152x152', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon-180x180.png', rel: 'apple-touch-icon', sizes: '180x180', type: 'image/png'
    = favicon_link_tag 'driver/apple-touch-icon.png', rel: 'shortcut icon',type: 'image/x-icon'
    = favicon_link_tag 'driver/apple-touch-icon.png', rel: 'apple-touch-icon'
  - else
    = favicon_link_tag 'apple-touch-icon-57x57.png', rel: 'apple-touch-icon', sizes: '57x57', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon-76x76.png', rel: 'apple-touch-icon', sizes: '76x76', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon-72x72.png', rel: 'apple-touch-icon', sizes: '72x72', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon-114x114.png', rel: 'apple-touch-icon', sizes: '114x114', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon-120x120.png', rel: 'apple-touch-icon', sizes: '120x120', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon-144x144.png', rel: 'apple-touch-icon', sizes: '144x144', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon-152x152.png', rel: 'apple-touch-icon', sizes: '152x152', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon-180x180.png', rel: 'apple-touch-icon', sizes: '180x180', type: 'image/png'
    = favicon_link_tag 'apple-touch-icon.png', rel: 'shortcut icon',type: 'image/x-icon'
    = favicon_link_tag 'apple-touch-icon.png', rel: 'apple-touch-icon'

  %link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
  %script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
  %script(src="https://kit.fontawesome.com/0fcf9dba54.js" crossorigin="anonymous")
