%header.mb-lg-5
  %nav.navbar.navbar-expand-lg.navbar-dark#main-navbar
    .container
      - site_title = SITE_TITLE

      = link_to root_path, class: 'navbar-brand' do
        %i.fa-solid.fa-tree.fa-lg
        = site_title


      %button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportedContent
        %ul.navbar-nav.me-auto.mb-2.mb-lg-0
          %li.nav-item
            = link_to "New reservation", new_reservation_path, class: "nav-link", "aria-current": "page"
          %li.nav-item
            = link_to "Donate", donation_without_reservation_path, local: true, data: { turbo:false } , class: "nav-link", "aria-current": "page"
          %li.nav-item
            = link_to questions_path, class: "nav-link", "aria-current": "page", id: 'question_header_link' do
              = "Questions"
              %i.fa-solid.fa-question
          %li.nav-item
            = link_to "About", about_path, class: "nav-link"


        %ul.navbar-nav.my-2.my-lg-0
          - if signed_in?
            %li.nav-item
              = link_to "Admin", admin_root_path, class: "btn btn-outline-light btn-site"
            %li.nav-item
              = link_to "Drivers", driver_root_path, class: 'btn btn-outline-light btn-site'
            %li.nav-item= button_to 'Sign out', sign_out_path, method: :delete, class: 'btn btn-primary'
          - else
            %li.nav-item= link_to 'Sign in', sign_in_path, class: 'nav-link'

