.card
  .card-body
    %h1.card-title.mb-3 Tree Pickup Reservation

    %p
      %b Name
      %br
      = @reservation.name

    %p
      %b Street address
      %br
      = @reservation.street

    %p= link_to "Edit", reservation_form_1_path(@reservation)


    %hr

    %p
      %b Email
      %br
      = @reservation.email
    %p
      %b Phone
      %br
      = @reservation.phone

    %p= link_to "Edit", reservation_form_2_path(@reservation)


