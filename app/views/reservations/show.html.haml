#reservation

  = render 'shared/reservation_header'

  .item.mt-3
    .field Name
    .data= @reservation.name

  .item
    .field Address
    .data#reservation-address= @reservation.address


  .item
    .field Pickup notes
    .data
      - if @reservation.notes.blank?
        %span.text-muted None provided
      - else
        = @reservation.notes

  .row
    .col-md-6
      .item
        .field Email
        .data
          - if @reservation.email.blank?
            %span.text-muted Not provided
          - else
            = @reservation.email
    .col-md-6
      .item
        .field Phone
        .data
          - if @reservation.phone.blank?
            %span.text-muted Not provided
          - else
            = @reservation.phone

  %hr.mt-0.mb-4

  - unless @reservation.is_cancelled?
    .item.text-center
      = link_to reservation_path(@reservation), method: :delete, data: { "turbo-method": :delete, confirm: 'Are you sure?' } do
        %i.fa-solid.fa-circle-xmark.fa-lg.icon
        = "Cancel"


  - unless @reservation.is_reservation_completed? || @reservation.is_cancelled?
    .row
      .col-md-12.mt-4
        .text-center= button_to 'Submit Reservation', reservation_submit_path(@reservation), class: 'btn btn-primary btn-lg'


