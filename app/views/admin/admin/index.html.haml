.container
  .row
    .col-lg-6
      %div.border.rounded.p-4.mb-3
        %h2 Missing
        %p.text-muted * Updates on newly missing reservations. Refresh for new status.
        %table.table.mb-0
          %thead
            %tr
              %th Reservation
              %th Missing
              %th SMS
              %th Email
          %tbody#reservations-missing
            = turbo_stream_from "missing"
    .col-lg-1
    .col-lg-3
      %div.border.rounded.p-4.mb-3
        %h2 Status

        %table.table.mb-0
          %tr
            %th Picked up
            %td.text-end= @count_picked_up
          %tr
            %th Pending
            %td.text-end= @count_pending_pickups
          %tr
            %th Missing
            %td.text-end= @count_missing
