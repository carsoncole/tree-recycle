.row
  .col-md-4
  .col-md-8
    = form_tag admin_search_path, local: true, method: :get do
      .form-inline.mx-sm-3.mb-3
        .row.mb-1
          .col-md-6
            = text_field_tag 'search',"", placeholder: 'Search', class: 'form-control', value: @search, id: 'search'
          .col-md-6
            = submit_tag 'Search', class: 'btn btn-primary search-button'
        .row
          .text-muted (name, email, in:archive)
