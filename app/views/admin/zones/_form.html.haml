= form_for [:admin, @zone] do |f|
  - if @zone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@zone.errors.count, "error")} prohibited this admin_zone from being saved:"
      %ul
        - @zone.errors.full_messages.each do |message|
          %li= message

  .mb-3
    .form-group
      = f.label :name, class: 'form-label'
      = f.text_field :name, class: 'form-control'
  .mb-3
    = f.label :street, class: 'form-label'
    = f.text_field :street, class: 'form-control'
  .mb-3
    = f.label :city, class: 'form-label'
    = f.text_field :city, class: 'form-control'
  .mb-3
    = f.label :state, class: 'form-label'
    = f.text_field :state, class: 'form-control'
  .mb-3
    = f.label :country, class: 'form-label'
    = f.text_field :country, class: 'form-control'
  .mb-3
    .form-group
      = f.label :leader, class: 'form-label'
      = f.collection_select :leader_id, Driver.all.order(:name), :id, :name, {include_blank: 'Select a Driver' }, class: 'form-control'

  .actions
    = f.submit 'Save', class: 'btn btn-primary'
