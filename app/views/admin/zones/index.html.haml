.row
  .col-md-3
  .col-md-6
    %h1
      %i.fa-solid.fa-road
      Routes

.row
  .col-md-3
  .col-md-6
    .admin-nav
      %nav
        %ul.nav.justify-content-end
          %li.nav-item
            = link_to new_admin_route_path, class: 'nav-link' do
              %i.fa-solid.fa-plus
              Route
          %li.nav-item
            = link_to new_admin_zone_path, class: 'nav-link' do
              %i.fa-solid.fa-plus
              Zone

.row
  .col-md-3
  .col-md-6
    .table-responsive
      %table.table#driver-zones
        %tr
          %th
          %th
          %th.data Total
          %th.data Pending
          %th.data Picked up
          %th.leader Leader
        - @zones.each do |zone|
          %tr
            %td.zone= link_to zone.name, admin_zone_path(zone)
            %td
            %td.data= zone.reservations.not_archived.count
            %td.data= zone.reservations.pending_pickup.count
            %td.data= zone.reservations.picked_up.count
            %td.leader
              - if zone.leader
                = link_to zone.leader.name, admin_driver_path(zone.leader)
          - zone.routes.each do |route|
            %tr
              %td.route= link_to route.name, admin_route_path(route)
              %td
              %td.data= route.reservations.not_archived.count
              %td.data= route.reservations.pending_pickup.count
              %td.data= route.reservations.picked_up.count
              %td.leader

