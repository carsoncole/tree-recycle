= form_for [:admin, @team] do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this admin_team from being saved:"
      %ul
        - @team.errors.full_messages.each do |message|
          %li= message

  .mb-3
    .form-group
      = f.label :name, class: 'form-label'
      = f.text_field :name, class: 'form-control'
  .mb-3
    .form-group
      = f.label :leader, class: 'form-label'
      = f.collection_select :leader_id, Driver.all.order(:name), :id, :name, {include_blank: 'Select a Driver' }, class: 'form-control'

  .actions
    = f.submit 'Save', class: 'btn btn-primary'
