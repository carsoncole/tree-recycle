%h1 Teams

%table.table
  %thead
    %tr
      %th Name
      %th Leader
      %th


  %tbody
    - @teams.each do |team|
      %tr
        %td= team.name
        %td= team&.leader&.name
        %td
          = link_to 'Show', admin_team_path(team)
          = link_to 'Edit', edit_admin_team_path(team)
          = link_to 'Destroy', admin_team_path(team), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Team', new_admin_team_path
