.container
  .row
    .col-lg-12
      %h1
        %i.bi.bi-person-fill
        = @driver.name

  .row.mb-4
    .col-md-3
    .col-md-6
      %h3= link_to @driver.zone.name, admin_zone_path(@driver.zone) if @driver.zone

  .row.mb-5
    .col-md-3
    .col-md-6.text-middle
      - if @driver.phone.present?
        = link_to "tel:#{@driver.phone}" do
          = @driver.phone
          %i.bi.bi-telephone-fill
      %br
      = mail_to @driver.email


  - if current_user.editor? || current_user.administrator?
    .row
      .col-md-3
      .col-md-6
        %p= link_to "Edit", edit_admin_driver_path(@driver)
        = button_to "Destroy Driver", admin_driver_path(@driver), method: :delete, data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger'


