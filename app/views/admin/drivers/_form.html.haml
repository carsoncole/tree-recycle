= form_for [:admin, @driver] do |f|
  - if @driver.errors.any?
    #error_explanation
      %h2= "#{pluralize(@driver.errors.count, "error")} prohibited this admin_driver from being saved:"
      %ul
        - @driver.errors.full_messages.each do |message|
          %li= message

  .mb-3
    .form-group
      = f.label :name, class: 'form-label'
      = f.text_field :name, class: 'form-control'
  .mb-3
    .form-group
      = f.label :email, class: 'form-label'
      = f.email_field :email, class: 'form-control'
  .mb-3
    .form-group
      = f.label :phone, class: 'form-label'
      = f.text_field :phone, class: 'form-control'
  .mb-3
    .form-group
      = f.label :zone, class: 'form-label'
      = f.collection_select :zone_id, Zone.all.order(:name), :id, :name, {include_blank: 'Select a Zone'}, class: 'form-control'


  .actions
    = f.submit 'Save', class: 'btn btn-primary'
