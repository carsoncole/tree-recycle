#home.container
  .row
    .col-md-12
      %h1
        .top-line
          .year= HOME_PAGE_YEAR
          .home-page-title= HOME_PAGE_TITLE
        .bottom-line
          .tree Tree
          .recycle Recycle
      .sub-line
        = HOME_PAGE_LEAD


  - unless setting.is_reservations_open?
    .row
      .col-lg-8.offset-lg-2
        = render 'remind_me'



  .row
    .col-md-12

      .text-center.pickup_date
        = nice_date(setting&.pickup_date_and_time)


      .text-center.d-grid.gap-2
        = link_to new_reservation_path, class: 'btn btn-primary btn-lg', id: 'reservation-button' do 
          Reserve now
          %i.bi.bi-arrow-right-circle

  .row
    .col-md-8.offset-lg-2.important-date
      - if setting&.sign_up_deadline_at
        Reservations close
        = nice_date_time_no_year(setting&.sign_up_deadline_at)

