- unless Setting.first_or_create.is_reservations_open?
  .important-message.warning
    Reservations will open on December 1.


#home.mt-5
  %h1
    .top-line
      .year= HOME_PAGE_YEAR
      .home-page-title= HOME_PAGE_TITLE
    .bottom-line
      .tree Tree
      .recycle Recycle
  .sub-line
    = HOME_PAGE_LEAD



  .text-center.pickup_date
    = nice_date(setting&.pickup_date_and_time)


  .text-center.d-grid.gap-2= link_to "Reserve a tree pickup", new_reservation_path, class: 'btn btn-primary btn-lg', id: 'reservation-button'


  .row
    .col-md-2
    .col-md-8.important-date
      - if setting&.sign_up_deadline_at
        Reservations close
        = nice_date_time_no_year(setting&.sign_up_deadline_at)

